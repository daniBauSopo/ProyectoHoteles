<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/verdeGuapo2</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/verdeGuapo2</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/verdeGuapo2</item>
    </style>

    <style name="MyRatingBar" parent="RatingBar">
    <item name="android:minHeight">48dip</item>
    <item name="android:maxHeight">48dip</item>
    <item name="android:progressDrawable">@drawable/rating_caras</item>
</style>

    <style name = "AppTextField" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name = "boxBackgroundColor"> #9506578f </item>
    </style>

    <style name="CampoTextoPurpura" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#95000000</item>
        <item name="colorControlActivated">#9506578f</item>
        <item name="android:textColorHighlight">#9506578f</item>
    </style>



</resources>
