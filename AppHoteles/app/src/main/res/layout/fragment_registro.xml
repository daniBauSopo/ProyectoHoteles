<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_registro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">



        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="430dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="430dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#90289cc1">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                style="@style/AppTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nikname"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="-40dp"
                    android:ems="10"
                    android:background="@drawable/estiloedittext"
                    android:inputType="textPersonName"
                    android:hint="Usuario"
                    android:maxLength="20"
                    android:text="@string/nickname"
                    android:fontFamily="@font/paradoid"
                    android:textColor="@color/verdeGuapo2"
                    android:textAlignment="center">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_coreo_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="20dp"
                style="@style/AppTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/correo_electronico"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textColor="@color/verdeGuapo2"
                    android:background="@drawable/estiloedittext"
                    android:text="@string/correo_registro"
                    android:fontFamily="@font/paradoid"
                    android:textAlignment="center">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="20dp"
                style="@style/AppTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telefono"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:hint="Telefono"
                    android:maxLength="9"
                    android:fontFamily="@font/paradoid"
                    android:digits="1234567890"
                    android:textColor="@color/verdeGuapo2"
                    android:background="@drawable/estiloedittext"
                    android:text="@string/telefono"
                    android:textAlignment="center">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_contraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="20dp"
                style="@style/AppTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contraseña_registro"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="@color/verdeGuapo2"
                    android:hint="Contraseña"
                    android:background="@drawable/estiloedittext"
                    android:maxLength="12"
                    android:text="@string/contraseña_registro"
                    android:fontFamily="@font/paradoid"
                    android:textAlignment="center">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_rep_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="20dp"
                style="@style/AppTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contraseña_repeticion"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="@color/verdeGuapo2"
                    android:hint="Repetir Contraseña"
                    android:background="@drawable/estiloedittext"
                    android:maxLength="12"
                    android:text="@string/contraseña_repeticion"
                    android:fontFamily="@font/paradoid"
                    android:textAlignment="center">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="220dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="180dp">

                <Button
                    android:id="@+id/boton_registrarse"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="@string/boton_registrarse"
                    android:fontFamily="@font/paradoid"
                    android:textSize="20dp"
                    android:background="@drawable/boton_normal_color"
                    android:textColor="@color/textColor"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>